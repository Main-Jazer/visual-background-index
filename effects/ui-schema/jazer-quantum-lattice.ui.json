{
  "version": 1,
  "title": "Quantum Lattice",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "gridSize": 7,
    "spacing": 120,
    "perspective": 800,
    "distance": 600,
    "rotationXSpeed": 0.2,
    "rotationYSpeed": 0.15,
    "rotationZSpeed": 0.1,
    "mouseRotation": 0.3,
    "trailAlpha": 0.12
  },
  "hud": {
    "title": "Quantum Lattice - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Grid Size",
      "bind": "params.gridSize",
      "min": 2,
      "max": 20,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Spacing",
      "bind": "params.spacing",
      "min": 10,
      "max": 400,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
