{
  "version": 1,
  "title": "Liquid Neon Ripple",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "maxRipples": 20,
    "rippleMaxAge": 4,
    "rippleRadius": 500,
    "ringCount": 6,
    "ringSpacing": 12,
    "waveStrength": 1,
    "waveFreq": 0.1,
    "waveFalloff": 50,
    "textEnabled": true,
    "textRepeat": 6,
    "textSizeBase": 16,
    "textSizeGrow": 10,
    "trailAlpha": 0.12,
    "bgColor": "#000000"
  },
  "hud": {
    "title": "Liquid Neon Ripple - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Max Ripples",
      "bind": "params.maxRipples",
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
