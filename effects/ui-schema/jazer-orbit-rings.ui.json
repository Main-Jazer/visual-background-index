{
  "version": 1,
  "title": "Orbit Rings",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "orbitCount": 12,
    "textPerRing": 16,
    "tiltStrength": 100,
    "depthOscSpeed": 0.8,
    "depthOscAmp": 0.15,
    "waveAmp": 8,
    "waveSpeed": 0.3,
    "trailAlpha": 0.12
  },
  "hud": {
    "title": "Orbit Rings - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Orbit Count",
      "bind": "params.orbitCount",
      "min": 0,
      "max": 60,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Text Per Ring",
      "bind": "params.textPerRing",
      "min": 0,
      "max": 60,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
