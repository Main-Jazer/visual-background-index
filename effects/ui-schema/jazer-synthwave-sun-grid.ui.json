{
  "version": 1,
  "title": "Synthwave Sun Grid",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000010",
    "sunRadius": 1.8,
    "sunGlow": 1,
    "gridWidth": 20,
    "gridDepth": 40,
    "gridResX": 200,
    "gridResZ": 400,
    "starCount": 800,
    "starOpacity": 0.6,
    "starSize": 0.03,
    "horizonOpacity": 0.15,
    "neonA": "#ff2aff",
    "neonB": "#00f5ff"
  },
  "hud": {
    "title": "Synthwave Sun Grid - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Star Count",
      "bind": "params.starCount",
      "min": 0,
      "max": 200000,
      "step": 1000
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
