{
  "version": 1,
  "title": "Audio Reactive Universe",
  "defaults": {
    "timeScale": 1,
    "audioSource": "file",
    "bassBoost": 1,
    "midsBoost": 1,
    "highsBoost": 1,
    "particleAttractorStrength": 1,
    "particleAttractorRadius": 1,
    "particleCurlScale": 1,
    "particleCurlStrength": 1,
    "particleDamping": 0.1,
    "spherePulse": 1,
    "sphereRotation": 1,
    "barsHeight": 1,
    "barsRadius": 30,
    "cameraRadius": 50,
    "cameraOrbitSpeed": 0.1,
    "fogDensity": 0.001
  },
  "hud": {
    "title": "Audio Reactive Universe â€” Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Attractor",
      "bind": "params.particleAttractorStrength",
      "step": 0.1,
      "min": 0,
      "max": 3,
      "format": "fixed1"
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Curl",
      "bind": "params.particleCurlStrength",
      "step": 0.1,
      "min": 0,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "select",
      "label": "Audio Source",
      "bind": "params.audioSource",
      "options": [
        {
          "label": "File",
          "value": "file"
        },
        {
          "label": "Microphone",
          "value": "mic"
        }
      ]
    },
    {
      "type": "slider",
      "label": "Bass Boost",
      "bind": "params.bassBoost",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Mids Boost",
      "bind": "params.midsBoost",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Highs Boost",
      "bind": "params.highsBoost",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Attractor Strength",
      "bind": "params.particleAttractorStrength",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Attractor Radius",
      "bind": "params.particleAttractorRadius",
      "min": 0.2,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Curl Scale",
      "bind": "params.particleCurlScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Curl Strength",
      "bind": "params.particleCurlStrength",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Damping",
      "bind": "params.particleDamping",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Sphere Pulse",
      "bind": "params.spherePulse",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Sphere Rotation",
      "bind": "params.sphereRotation",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Bars Height",
      "bind": "params.barsHeight",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Bars Radius",
      "bind": "params.barsRadius",
      "min": 5,
      "max": 80,
      "step": 0.5
    },
    {
      "type": "slider",
      "label": "Camera Radius",
      "bind": "params.cameraRadius",
      "min": 10,
      "max": 120,
      "step": 0.5
    },
    {
      "type": "slider",
      "label": "Camera Orbit Speed",
      "bind": "params.cameraOrbitSpeed",
      "min": 0,
      "max": 0.5,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.01,
      "step": 0.0001
    }
  ],
  "hint": "Press H for help. Controls bind to params; effect must read window.JAZER_UI.params (or expose objects) for changes to apply."
}
