{
  "version": 1,
  "title": "Hexagon Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#020008",
    "hexCount": 60,
    "travelSpeed": 6,
    "rotationSpeed": 0.3,
    "pulseSpeed": 3,
    "parallaxStrength": 80,
    "baseRadius": 500,
    "pulseAmp": 0.1,
    "lineWidth": 1,
    "trailAlpha": 0.12,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff"
  },
  "hud": {
    "title": "Hexagon Tunnel - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Travel",
      "bind": "params.travelSpeed",
      "step": 0.5,
      "min": 0,
      "max": 20,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Hex Count",
      "bind": "params.hexCount",
      "min": 1,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Travel Speed",
      "bind": "params.travelSpeed",
      "min": 0,
      "max": 20,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Rotation Speed",
      "bind": "params.rotationSpeed",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Pulse Speed",
      "bind": "params.pulseSpeed",
      "min": 0,
      "max": 10,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Parallax Strength",
      "bind": "params.parallaxStrength",
      "min": 0,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
