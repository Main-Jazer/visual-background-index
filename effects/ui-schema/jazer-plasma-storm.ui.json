{
  "version": 1,
  "title": "Plasma Storm",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgInner": "#100010",
    "bgOuter": "#000005",
    "trailAlpha": 0.15,
    "orbCount": 6,
    "maxLinkDistance": 400,
    "linkChance": 0.1,
    "tendrilCount": 6,
    "glowStrength": 1,
    "colorA": "#ff0055",
    "colorB": "#00f5ff"
  },
  "hud": {
    "title": "Plasma Storm - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Orb Count",
      "bind": "params.orbCount",
      "min": 0,
      "max": 40,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
