{
  "version": 1,
  "title": "Plasma Vortex",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "ringCount": 15,
    "pointsPerRing": 120,
    "radiusBase": 2,
    "radiusStep": 0.5,
    "ringHeightStep": 0.8,
    "particleSizeBase": 0.05,
    "particleSizeVar": 0.03,
    "rotationBase": 0.5,
    "pulseSpeed": 2,
    "pulseAmp": 0.1,
    "mouseRepelRadius": 2,
    "mouseRepelStrength": 0.5,
    "glowStrength": 1
  },
  "hud": {
    "title": "Plasma Vortex - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Ring Count",
      "bind": "params.ringCount",
      "min": 1,
      "max": 60,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Points Per Ring",
      "bind": "params.pointsPerRing",
      "min": 12,
      "max": 400,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
