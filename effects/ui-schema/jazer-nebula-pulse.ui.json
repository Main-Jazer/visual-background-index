{
  "version": 1,
  "title": "Nebula Pulse",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "resolution": 4,
    "nebulaIntensity": 0.6,
    "pulseRate": 1.5,
    "stars": 300,
    "textParticles": 50,
    "scanlines": true,
    "scanlineAlpha": 0.05,
    "vignette": 1
  },
  "hud": {
    "title": "Nebula Pulse - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Intensity",
      "bind": "params.nebulaIntensity",
      "step": 0.05,
      "min": 0,
      "max": 2,
      "format": "fixed2"
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Pulse",
      "bind": "params.pulseRate",
      "step": 0.1,
      "min": 0,
      "max": 6,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Resolution (lower = heavier)",
      "bind": "params.resolution",
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Nebula Intensity",
      "bind": "params.nebulaIntensity",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Pulse Rate",
      "bind": "params.pulseRate",
      "min": 0,
      "max": 6,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Stars",
      "bind": "params.stars",
      "min": 0,
      "max": 5000,
      "step": 10
    },
    {
      "type": "slider",
      "label": "Text Particles",
      "bind": "params.textParticles",
      "min": 0,
      "max": 1000,
      "step": 1
    },
    {
      "type": "checkbox",
      "label": "Scanlines",
      "bind": "params.scanlines"
    },
    {
      "type": "slider",
      "label": "Scanline Alpha",
      "bind": "params.scanlineAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Vignette",
      "bind": "params.vignette",
      "min": 0,
      "max": 2,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect reads these params live."
}
