{
  "version": 1,
  "title": "Torus Knot Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "tunnelRadius": 10,
    "tunnelLength": 300,
    "ringCount": 20,
    "conduitCount": 6,
    "knotCount": 8,
    "knotSpacing": 30,
    "particleCount": 800,
    "tunnelSpeed": 2.5,
    "ringOpacity": 0.22,
    "knotOpacity": 0.55,
    "neonA": "#00f5ff",
    "neonB": "#ff2aff"
  },
  "hud": {
    "title": "Torus Knot Tunnel - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Knot Count",
      "bind": "params.knotCount",
      "min": 0,
      "max": 64,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Particles",
      "bind": "params.particleCount",
      "min": 0,
      "max": 50000,
      "step": 250
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
