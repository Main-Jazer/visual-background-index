{
  "version": 1,
  "title": "Infinite Logo Kaleidoscope",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#010007",
    "fogColor": "#040214",
    "fogDensity": 0.05,
    "wedgeCount": 16,
    "trailCount": 1200,
    "trailOpacity": 0.35,
    "trailSize": 0.05,
    "rotationSpeed": 0.25,
    "zoomSpeed": 0.35,
    "kaleidoSpin": 0.6,
    "logoOpacity": 0.95,
    "glowStrength": 1.1,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff",
    "colorC": "#ffd25b"
  },
  "hud": {
    "title": "Infinite Logo Kaleidoscope - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Wedges",
      "bind": "params.wedgeCount",
      "step": 1,
      "min": 3,
      "max": 32,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Wedge Count",
      "bind": "params.wedgeCount",
      "min": 3,
      "max": 32,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Count",
      "bind": "params.trailCount",
      "min": 0,
      "max": 20000,
      "step": 100
    },
    {
      "type": "slider",
      "label": "Trail Opacity",
      "bind": "params.trailOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Rotation Speed",
      "bind": "params.rotationSpeed",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Zoom Speed",
      "bind": "params.zoomSpeed",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glow Strength",
      "bind": "params.glowStrength",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "color",
      "label": "Color C",
      "bind": "params.colorC"
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
