{
  "version": 1,
  "title": "Supernova Shockwave",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "coreRadius": 1.2,
    "coreGlow": 1,
    "shockwaveInner": 1.5,
    "shockwaveOuter": 1.7,
    "shockwaveOpacity": 0.8,
    "debrisCount": 1800,
    "debrisOpacity": 0.8,
    "debrisSize": 0.05,
    "starCount": 1500,
    "starOpacity": 0.3,
    "starSize": 0.04
  },
  "hud": {
    "title": "Supernova Shockwave - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Debris Count",
      "bind": "params.debrisCount",
      "min": 0,
      "max": 200000,
      "step": 1000
    },
    {
      "type": "slider",
      "label": "Star Count",
      "bind": "params.starCount",
      "min": 0,
      "max": 200000,
      "step": 1000
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
