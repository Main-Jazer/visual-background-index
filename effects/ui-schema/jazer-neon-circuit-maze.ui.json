{
  "version": 1,
  "title": "Neon Circuit Maze",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "gridRes": 50,
    "towerCount": 2500,
    "towerHeightMin": 0.4,
    "towerHeightMax": 4,
    "droneCount": 10,
    "particleCount": 1500,
    "floorGlow": 1,
    "neonA": "#00f5ff",
    "neonB": "#ff2aff",
    "fogEnabled": false
  },
  "hud": {
    "title": "Neon Circuit Maze - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Grid Res",
      "bind": "params.gridRes",
      "min": 5,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Particles",
      "bind": "params.particleCount",
      "min": 0,
      "max": 50000,
      "step": 250
    },
    {
      "type": "color",
      "label": "Neon A",
      "bind": "params.neonA"
    },
    {
      "type": "color",
      "label": "Neon B",
      "bind": "params.neonB"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
