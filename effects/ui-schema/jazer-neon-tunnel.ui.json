{
  "version": 1,
  "title": "Neon Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "ringCount": 30,
    "textSegments": 16,
    "tunnelSpeed": 2.5,
    "twistSpeed": 0.3,
    "wobbleAmp": 15,
    "parallaxStrength": 30,
    "trailAlpha": 0.12
  },
  "hud": {
    "title": "Neon Tunnel - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Ring Count",
      "bind": "params.ringCount",
      "min": 0,
      "max": 120,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Tunnel Speed",
      "bind": "params.tunnelSpeed",
      "min": 0,
      "max": 10,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Twist Speed",
      "bind": "params.twistSpeed",
      "min": 0,
      "max": 3,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
