{
  "version": 1,
  "title": "Quantum Foam",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000005",
    "fogColor": "#000005",
    "fogDensity": 0.01,
    "particleCount": 8000,
    "foamRadius": 10,
    "particleOpacity": 0.7,
    "particleSize": 0.05,
    "fieldOpacity": 0.25,
    "fieldDetail": 4,
    "lightA": "#00ffff",
    "lightB": "#ff00ff"
  },
  "hud": {
    "title": "Quantum Foam - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 100000,
      "step": 500
    },
    {
      "type": "slider",
      "label": "Foam Radius",
      "bind": "params.foamRadius",
      "min": 1,
      "max": 50,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
