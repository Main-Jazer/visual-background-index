{
  "version": 1,
  "title": "Particle Galaxy",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "arms": 4,
    "particleCount": 50000,
    "galaxyRadius": 5,
    "spinFactor": 2,
    "randomness": 0.5,
    "coreRadius": 0.15,
    "glowRadius": 0.5,
    "starCount": 2000,
    "particleOpacity": 0.9,
    "starOpacity": 0.6,
    "colorInside": "#ff0055",
    "colorOutside": "#0055ff"
  },
  "hud": {
    "title": "Particle Galaxy - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particles",
      "bind": "params.particleCount",
      "min": 0,
      "max": 250000,
      "step": 1000
    },
    {
      "type": "slider",
      "label": "Star Count",
      "bind": "params.starCount",
      "min": 0,
      "max": 50000,
      "step": 500
    },
    {
      "type": "color",
      "label": "Inside",
      "bind": "params.colorInside"
    },
    {
      "type": "color",
      "label": "Outside",
      "bind": "params.colorOutside"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
