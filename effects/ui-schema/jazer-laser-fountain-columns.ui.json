{
  "version": 1,
  "title": "Laser Fountain Columns",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000007",
    "fogColor": "#040217",
    "fogDensity": 0.06,
    "pillarCount": 10,
    "pillarRadius": 18,
    "pillarHeight": 30,
    "laserCount": 1500,
    "laserOpacity": 0.6,
    "laserWidth": 0.03,
    "pulseSpeed": 1,
    "riseSpeed": 1.2,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff",
    "accent": "#ffd25b"
  },
  "hud": {
    "title": "Laser Fountain Columns - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Pillar Count",
      "bind": "params.pillarCount",
      "min": 0,
      "max": 64,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Laser Count",
      "bind": "params.laserCount",
      "min": 0,
      "max": 20000,
      "step": 200
    },
    {
      "type": "slider",
      "label": "Laser Opacity",
      "bind": "params.laserOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "color",
      "label": "Accent",
      "bind": "params.accent"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
