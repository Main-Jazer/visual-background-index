{
  "version": 1,
  "title": "Hyperspace Streaks",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#010009",
    "fogColor": "#010009",
    "fogDensity": 0.04,
    "streakCount": 2000,
    "streakOpacity": 0.7,
    "streakLength": 6,
    "streakSpeed": 35,
    "warpPulseSpeed": 0.8,
    "colorA": "#00f5ff",
    "colorB": "#ff2aff",
    "sparkColor": "#ffffff"
  },
  "hud": {
    "title": "Hyperspace Streaks - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Streak Count",
      "bind": "params.streakCount",
      "min": 0,
      "max": 30000,
      "step": 250
    },
    {
      "type": "slider",
      "label": "Streak Opacity",
      "bind": "params.streakOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Streak Speed",
      "bind": "params.streakSpeed",
      "min": 0,
      "max": 120,
      "step": 0.1
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "color",
      "label": "Spark Color",
      "bind": "params.sparkColor"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
