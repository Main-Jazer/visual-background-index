{
  "version": 1,
  "title": "Materials Showcase",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "materialIndex": 0,
    "autoCycle": true,
    "cycleSeconds": 6,
    "particleCount": 2000,
    "particleOpacity": 0.7,
    "particleSize": 0.08,
    "groundOpacity": 0.25,
    "lightIntensity": 1
  },
  "hud": {
    "title": "Materials Showcase - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Auto Cycle",
      "bind": "params.autoCycle"
    },
    {
      "type": "slider",
      "label": "Material Index",
      "bind": "params.materialIndex",
      "min": 0,
      "max": 20,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 20000,
      "step": 200
    },
    {
      "type": "slider",
      "label": "Particle Opacity",
      "bind": "params.particleOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
