{
  "version": 1,
  "title": "Starfall Conveyor",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "starCount": 2000,
    "starOpacity": 0.8,
    "starSize": 0.05,
    "beltOpacity": 0.6,
    "railOpacity": 0.6,
    "podCount": 24,
    "podOpacity": 0.8,
    "conveyorSpeed": 12,
    "neonA": "#00f5ff",
    "accent": "#ffc857"
  },
  "hud": {
    "title": "Starfall Conveyor - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Star Count",
      "bind": "params.starCount",
      "min": 0,
      "max": 200000,
      "step": 1000
    },
    {
      "type": "slider",
      "label": "Conveyor Speed",
      "bind": "params.conveyorSpeed",
      "min": 0,
      "max": 60,
      "step": 0.1
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
