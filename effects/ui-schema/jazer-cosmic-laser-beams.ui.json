{
  "version": 1,
  "title": "Cosmic Laser Beams",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "rotationSpeed": 0.1,
    "spawnInterval": 0.3,
    "particleSpeed": 300,
    "beamWidth": 1,
    "trailAlpha": 0.15
  },
  "hud": {
    "title": "Cosmic Laser Beams â€” Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "key": "B",
      "label": "Rebuild",
      "action": "rebuild"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Width",
      "bind": "params.beamWidth",
      "step": 0.1,
      "min": 0.2,
      "max": 4,
      "format": "fixed1"
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Speed",
      "bind": "params.particleSpeed",
      "step": 20,
      "min": 20,
      "max": 1200,
      "format": "int"
    },
    {
      "keys": [
        "7",
        "8"
      ],
      "label": "Rotate",
      "bind": "params.rotationSpeed",
      "step": 0.05,
      "min": 0,
      "max": 2,
      "format": "fixed2"
    },
    {
      "keys": [
        "9",
        "0"
      ],
      "label": "Spawn",
      "bind": "params.spawnInterval",
      "step": 0.05,
      "min": 0.05,
      "max": 1.5,
      "format": "fixed2"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Rotation Speed",
      "bind": "params.rotationSpeed",
      "min": 0,
      "max": 2,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Spawn Interval",
      "bind": "params.spawnInterval",
      "min": 0.05,
      "max": 1.5,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Speed",
      "bind": "params.particleSpeed",
      "min": 20,
      "max": 1200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Beam Width",
      "bind": "params.beamWidth",
      "min": 0.2,
      "max": 4,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.5,
      "step": 0.01
    },
    {
      "type": "button",
      "label": "Rebuild",
      "action": "rebuild"
    }
  ],
  "hint": "Press H for help. This effect reads these params live; press B to rebuild beams/stars."
}
