{
  "version": 1,
  "title": "Neon Vine Growth",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "vineCount": 8,
    "vineSegments": 160,
    "vineRadius": 0.05,
    "budCount": 600,
    "budOpacity": 0.6,
    "budSize": 0.08,
    "neonA": "#00f5ff",
    "neonB": "#ff2aff"
  },
  "hud": {
    "title": "Neon Vine Growth - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Vine Count",
      "bind": "params.vineCount",
      "min": 0,
      "max": 64,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Bud Count",
      "bind": "params.budCount",
      "min": 0,
      "max": 20000,
      "step": 100
    },
    {
      "type": "color",
      "label": "Neon A",
      "bind": "params.neonA"
    },
    {
      "type": "color",
      "label": "Neon B",
      "bind": "params.neonB"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
