{
  "version": 1,
  "title": "Gravity Well Spiral",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#010007",
    "fogColor": "#05001c",
    "fogDensity": 0.07,
    "spiralSegments": 1200,
    "spiralOpacity": 0.8,
    "particleCount": 1600,
    "particleSize": 0.05,
    "particleOpacity": 0.6,
    "diskOpacity": 0.7,
    "coreOpacity": 0.9,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff",
    "colorC": "#ffd25b"
  },
  "hud": {
    "title": "Gravity Well Spiral - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Fog",
      "bind": "params.fogDensity",
      "step": 0.01,
      "min": 0,
      "max": 0.2,
      "format": "fixed2"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "color",
      "label": "Fog Color",
      "bind": "params.fogColor"
    },
    {
      "type": "slider",
      "label": "Spiral Segments",
      "bind": "params.spiralSegments",
      "min": 100,
      "max": 6000,
      "step": 50
    },
    {
      "type": "slider",
      "label": "Spiral Opacity",
      "bind": "params.spiralOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 10000,
      "step": 100
    },
    {
      "type": "slider",
      "label": "Particle Size",
      "bind": "params.particleSize",
      "min": 0,
      "max": 0.3,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Particle Opacity",
      "bind": "params.particleOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Disk Opacity",
      "bind": "params.diskOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Core Opacity",
      "bind": "params.coreOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "color",
      "label": "Color C",
      "bind": "params.colorC"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
