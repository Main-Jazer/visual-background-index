{
  "version": 1,
  "title": "Aurora Borealis",
  "defaults": {
    "timeScale": 1,
    "ribbonSpeed": 1,
    "ribbonAmplitude": 1,
    "ribbonThickness": 1,
    "mouseEnabled": false,
    "starTwinkle": 1,
    "mountainFar": 1,
    "mountainNear": 1,
    "vignette": 1,
    "reflection": 1
  },
  "hud": {
    "title": "Aurora Borealis \u2014 Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Mountainfar",
      "bind": "params.mountainFar",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Mountainnear",
      "bind": "params.mountainNear",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "7",
        "8"
      ],
      "label": "Reflection",
      "bind": "params.reflection",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "9",
        "10"
      ],
      "label": "Ribbonamplitude",
      "bind": "params.ribbonAmplitude",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Mountainfar",
      "bind": "params.mountainFar",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Mountainnear",
      "bind": "params.mountainNear",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Reflection",
      "bind": "params.reflection",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Ribbonamplitude",
      "bind": "params.ribbonAmplitude",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Ribbonspeed",
      "bind": "params.ribbonSpeed",
      "step": 0.01,
      "min": 0.1,
      "max": 3
    },
    {
      "type": "slider",
      "label": "Ribbonthickness",
      "bind": "params.ribbonThickness",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Startwinkle",
      "bind": "params.starTwinkle",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Vignette",
      "bind": "params.vignette",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "color",
      "label": "Auroracolors 1",
      "bind": "effect.auroraColors[0]"
    },
    {
      "type": "color",
      "label": "Auroracolors 2",
      "bind": "effect.auroraColors[1]"
    }
  ],
  "hint": "Press H for help. Canvas 2D effect."
}