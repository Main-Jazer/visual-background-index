{
  "version": 1,
  "title": "Aurora Borealis",
  "defaults": {
    "timeScale": 1,
    "ribbonSpeed": 1,
    "ribbonAmplitude": 1,
    "ribbonThickness": 1,
    "mouseEnabled": false,
    "starTwinkle": 1,
    "mountainFar": 1,
    "mountainNear": 1,
    "vignette": 1,
    "reflection": 1,
    "auroraColor1": "#00ff87",
    "auroraColor2": "#60efff",
    "auroraColor3": "#b967ff",
    "auroraColor4": "#ff00ff",
    "auroraColor5": "#00ffff"
  },
  "hud": {
    "title": "Aurora Borealis \u2014 Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Mountain Far",
      "bind": "params.mountainFar",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Mountain Near",
      "bind": "params.mountainNear",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "7",
        "8"
      ],
      "label": "Reflection",
      "bind": "params.reflection",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "9",
        "10"
      ],
      "label": "Ribbon Amplitude",
      "bind": "params.ribbonAmplitude",
      "step": 0.1,
      "format": "fixed1",
      "min": 0,
      "max": 2
    },
    {
      "keys": [
        "Q",
        "W"
      ],
      "label": "Ribbon Speed",
      "bind": "params.ribbonSpeed",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Mountain Far",
      "bind": "params.mountainFar",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Mountain Near",
      "bind": "params.mountainNear",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Reflection",
      "bind": "params.reflection",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Ribbon Amplitude",
      "bind": "params.ribbonAmplitude",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Ribbon Speed",
      "bind": "params.ribbonSpeed",
      "step": 0.01,
      "min": 0.1,
      "max": 3
    },
    {
      "type": "slider",
      "label": "Ribbon Thickness",
      "bind": "params.ribbonThickness",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Star Twinkle",
      "bind": "params.starTwinkle",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "slider",
      "label": "Vignette",
      "bind": "params.vignette",
      "step": 0.01,
      "min": 0,
      "max": 2
    },
    {
      "type": "color",
      "label": "Aurora Color 1",
      "bind": "params.auroraColor1"
    },
    {
      "type": "color",
      "label": "Aurora Color 2",
      "bind": "params.auroraColor2"
    },
    {
      "type": "color",
      "label": "Aurora Color 3",
      "bind": "params.auroraColor3"
    },
    {
      "type": "color",
      "label": "Aurora Color 4",
      "bind": "params.auroraColor4"
    },
    {
      "type": "color",
      "label": "Aurora Color 5",
      "bind": "params.auroraColor5"
    }
  ],
  "hint": "Press H for help. Canvas 2D effect; most controls already bind to params. Aurora color controls require effect to read params.auroraColor1..5."
}
