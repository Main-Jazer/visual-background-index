{
  "version": 1,
  "title": "Fractal Bloom",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "trailAlpha": 0.1,
    "symmetryArms": 8,
    "maxDepth": 5,
    "zoomSpeed": 0.3,
    "rotationSpeed": 0.2,
    "hueSpeed": 0.1,
    "branchLength": 150,
    "angleSpread": 0.785398163,
    "glowStrength": 1,
    "bgColor": "#000000"
  },
  "hud": {
    "title": "Fractal Bloom - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Symmetry Arms",
      "bind": "params.symmetryArms",
      "min": 3,
      "max": 16,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Max Depth",
      "bind": "params.maxDepth",
      "min": 1,
      "max": 8,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Zoom Speed",
      "bind": "params.zoomSpeed",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Rotation Speed",
      "bind": "params.rotationSpeed",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Hue Speed",
      "bind": "params.hueSpeed",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Branch Length",
      "bind": "params.branchLength",
      "min": 30,
      "max": 300,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Angle Spread (rad)",
      "bind": "params.angleSpread",
      "min": 0,
      "max": 1.570796327,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Glow Strength",
      "bind": "params.glowStrength",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
