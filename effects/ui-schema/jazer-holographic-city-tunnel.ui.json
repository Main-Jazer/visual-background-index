{
  "version": 1,
  "title": "Holographic City Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000510",
    "fogColor": "#000510",
    "fogDensity": 0.01,
    "flySpeed": 0.5,
    "planeCount": 8,
    "planeOpacity": 0.15,
    "buildingCount": 220,
    "buildingOpacity": 0.5,
    "symbolCount": 80,
    "symbolOpacity": 0.5,
    "scanLineCount": 60,
    "scanLineOpacity": 0.6,
    "dataParticleCount": 3000,
    "dataParticleOpacity": 0.7,
    "dataParticleSize": 1,
    "glitchDecay": 0.9,
    "glitchTriggerMin": 1,
    "glitchTriggerVar": 2,
    "neonA": "#ff0055",
    "neonB": "#00f5ff",
    "neonC": "#ff2aff"
  },
  "hud": {
    "title": "Holographic City Tunnel - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Fly",
      "bind": "params.flySpeed",
      "step": 0.1,
      "min": 0,
      "max": 5,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Fly Speed",
      "bind": "params.flySpeed",
      "min": 0,
      "max": 5,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.1,
      "step": 0.0005
    },
    {
      "type": "slider",
      "label": "Data Particles",
      "bind": "params.dataParticleCount",
      "min": 0,
      "max": 20000,
      "step": 250
    },
    {
      "type": "slider",
      "label": "Data Particle Opacity",
      "bind": "params.dataParticleOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Data Particle Size",
      "bind": "params.dataParticleSize",
      "min": 0,
      "max": 10,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Neon A",
      "bind": "params.neonA"
    },
    {
      "type": "color",
      "label": "Neon B",
      "bind": "params.neonB"
    },
    {
      "type": "color",
      "label": "Neon C",
      "bind": "params.neonC"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
