{
  "version": 1,
  "title": "Eclipse Ring Halo",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "mouseStrength": 1,
    "bgColor": "#010007",
    "fogColor": "#040017",
    "fogDensity": 0.05,
    "sunRadius": 1.5,
    "sunStripeFreq": 80,
    "sunStripeSpeed": 2,
    "haloColor": "#ff2aff",
    "haloOpacity": 0.3,
    "ringCount": 4,
    "ringOpacityBase": 0.25,
    "ringOpacityStep": 0.05,
    "sparkCount": 500,
    "sparkOpacity": 0.6,
    "sparkSize": 0.06,
    "sparkSpeedMin": 0.5,
    "sparkSpeedVar": 0.7,
    "glyphColor": "#00f5ff",
    "glyphScale": 4
  },
  "hud": {
    "title": "Eclipse Ring Halo â€” Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Mouse Strength",
      "bind": "params.mouseStrength",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Halo Opacity",
      "bind": "params.haloOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Halo Color",
      "bind": "params.haloColor"
    },
    {
      "type": "slider",
      "label": "Spark Opacity",
      "bind": "params.sparkOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Spark Size",
      "bind": "params.sparkSize",
      "min": 0.01,
      "max": 0.3,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "color",
      "label": "Fog Color",
      "bind": "params.fogColor"
    },
    {
      "type": "color",
      "label": "Background Color",
      "bind": "params.bgColor"
    },
    {
      "type": "color",
      "label": "Glyph Color",
      "bind": "params.glyphColor"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
