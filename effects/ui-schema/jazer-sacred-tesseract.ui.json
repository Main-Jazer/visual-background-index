{
  "version": 1,
  "title": "Sacred Tesseract",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000006",
    "fogColor": "#030012",
    "fogDensity": 0.06,
    "wireOpacity": 0.6,
    "glowStrength": 1,
    "nodeCount": 1200,
    "nodeOpacity": 0.55,
    "nodeSize": 0.05,
    "colorA": "#00f5ff",
    "colorB": "#ff2aff"
  },
  "hud": {
    "title": "Sacred Tesseract - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
