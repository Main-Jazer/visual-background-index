{
  "version": 1,
  "title": "Vortex Spiral",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "textCount": 180,
    "spiralTightness": 0.12,
    "rotationSpeed": 0.6,
    "zoomSpeed": 0.4,
    "pulseBPM": 128,
    "wobbleAmp": 5,
    "trailAlpha": 0.12,
    "bgColor": "#000006"
  },
  "hud": {
    "title": "Vortex Spiral - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Text Count",
      "bind": "params.textCount",
      "min": 0,
      "max": 1000,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
