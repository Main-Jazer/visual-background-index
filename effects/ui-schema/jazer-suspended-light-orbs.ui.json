{
  "version": 1,
  "title": "Suspended Light Orbs",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "orbCount": 24,
    "orbOpacity": 0.9,
    "orbRadius": 0.25,
    "tetherOpacity": 0.4,
    "tetherColor": "#00f5ff",
    "dustCount": 1200,
    "dustOpacity": 0.3,
    "dustSize": 0.04,
    "lightIntensity": 1.5
  },
  "hud": {
    "title": "Suspended Light Orbs - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Orb Count",
      "bind": "params.orbCount",
      "min": 0,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Dust Count",
      "bind": "params.dustCount",
      "min": 0,
      "max": 50000,
      "step": 250
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
