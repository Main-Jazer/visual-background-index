{
  "version": 1,
  "title": "Gridfall",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "gridSize": 30,
    "gridDepth": 25,
    "gridWidth": 40,
    "scrollSpeed": 80,
    "scanLineSpacing": 3,
    "maxHolograms": 12,
    "spawnInterval": 1.5,
    "glowMin": 0.7,
    "glowMax": 1.3,
    "textColorA": "#00ffff",
    "textColorB": "#ff00ff"
  },
  "hud": {
    "title": "Gridfall - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Speed",
      "bind": "params.scrollSpeed",
      "step": 5,
      "min": 0,
      "max": 300,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Grid Size",
      "bind": "params.gridSize",
      "min": 10,
      "max": 80,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Grid Depth",
      "bind": "params.gridDepth",
      "min": 5,
      "max": 80,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Grid Width",
      "bind": "params.gridWidth",
      "min": 5,
      "max": 120,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Scroll Speed",
      "bind": "params.scrollSpeed",
      "min": 0,
      "max": 300,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Spawn Interval",
      "bind": "params.spawnInterval",
      "min": 0.1,
      "max": 5,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Max Holograms",
      "bind": "params.maxHolograms",
      "min": 0,
      "max": 64,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Scan Line Spacing",
      "bind": "params.scanLineSpacing",
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    },
    {
      "type": "color",
      "label": "Text Color A",
      "bind": "params.textColorA"
    },
    {
      "type": "color",
      "label": "Text Color B",
      "bind": "params.textColorB"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
