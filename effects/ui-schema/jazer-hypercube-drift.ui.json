{
  "version": 1,
  "title": "Hypercube Drift",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "trailAlpha": 0.12,
    "cubeCount": 70,
    "cubeSize": 34,
    "cubeLineWidth": 1.2,
    "driftSpeed": 0.8,
    "rotationSpeed": 0.4,
    "depthFog": 0.35,
    "textEnabled": true,
    "textOpacity": 0.8,
    "colorA": "#00f5ff",
    "colorB": "#ff2aff"
  },
  "hud": {
    "title": "Hypercube Drift - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Drift",
      "bind": "params.driftSpeed",
      "step": 0.1,
      "min": 0,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Cube Count",
      "bind": "params.cubeCount",
      "min": 0,
      "max": 500,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Cube Size",
      "bind": "params.cubeSize",
      "min": 1,
      "max": 120,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Rotation Speed",
      "bind": "params.rotationSpeed",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Text Enabled",
      "bind": "params.textEnabled"
    },
    {
      "type": "slider",
      "label": "Text Opacity",
      "bind": "params.textOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
