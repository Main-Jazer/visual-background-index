{
  "version": 1,
  "title": "Synthwave Grid",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true
  },
  "hud": {
    "title": "Synthwave Grid \u2014 Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "color",
      "label": "Skycolors 1",
      "bind": "effect.skyColors[0]"
    },
    {
      "type": "color",
      "label": "Skycolors 2",
      "bind": "effect.skyColors[1]"
    },
    {
      "type": "color",
      "label": "Mountaincolors 1",
      "bind": "effect.mountainColors[0]"
    },
    {
      "type": "color",
      "label": "Mountaincolors 2",
      "bind": "effect.mountainColors[1]"
    }
  ],
  "hint": "Press H for help. Canvas 2D effect."
}