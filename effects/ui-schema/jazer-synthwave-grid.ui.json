{
  "version": 1,
  "title": "Synthwave Grid",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "gridSize": 40,
    "gridDepth": 60,
    "mountainScale": 150,
    "trailAlpha": 0.12,
    "gridColor": "#ff00ff",
    "skyInner": "#0f0018",
    "skyOuter": "#ff006e",
    "sunColor": "#ffbe0b"
  },
  "hud": {
    "title": "Synthwave Grid - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Grid Depth",
      "bind": "params.gridDepth",
      "min": 5,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Grid Color",
      "bind": "params.gridColor"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
