{
  "version": 1,
  "title": "Pro FX Demo",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "particleCount": 200,
    "attractStrength": 0.3,
    "noiseStrength": 0.2,
    "connectionDistance": 150,
    "bgColor": "#000000",
    "colorA": "#ff0055",
    "colorB": "#00f5ff"
  },
  "hud": {
    "title": "Pro FX Demo - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Count",
      "bind": "params.particleCount",
      "step": 20,
      "min": 20,
      "max": 2000,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 20,
      "max": 2000,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Attract Strength",
      "bind": "params.attractStrength",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Noise Strength",
      "bind": "params.noiseStrength",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Connection Distance",
      "bind": "params.connectionDistance",
      "min": 0,
      "max": 500,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect reads these params live."
}
