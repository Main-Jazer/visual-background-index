{
  "version": 1,
  "title": "Metatron's Cube",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "fruitOfLifeRadius": 5,
    "lineOpacity": 0.3,
    "lineWidth": 1,
    "solidOpacity": 0.9,
    "particleCount": 2000,
    "particleOpacity": 0.5,
    "particleSize": 0.03,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff",
    "accent": "#ffd25b"
  },
  "hud": {
    "title": "Metatron's Cube - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Fruit of Life Radius",
      "bind": "params.fruitOfLifeRadius",
      "min": 1,
      "max": 15,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 50000,
      "step": 250
    },
    {
      "type": "slider",
      "label": "Line Opacity",
      "bind": "params.lineOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "color",
      "label": "Accent",
      "bind": "params.accent"
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
