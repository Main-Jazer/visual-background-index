{
  "version": 1,
  "title": "Chromatic Glitch Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "mouseStrength": 1,
    "bgColor": "#020008",
    "fogColor": "#030010",
    "fogDensity": 0.08,
    "tunnelSpeed": 10,
    "segmentCount": 48,
    "segmentSpacing": 1.3,
    "tunnelRadius": 4.5,
    "segmentThickness": 0.7,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff",
    "glitchIntensity": 1,
    "scanIntensity": 1,
    "shardSpeed": 1,
    "shardSize": 0.08,
    "shardOpacity": 0.7,
    "glitchPlaneOpacity": 0.08
  },
  "hud": {
    "title": "Chromatic Glitch Tunnel â€” Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Speed",
      "bind": "params.tunnelSpeed",
      "step": 1,
      "min": 0,
      "max": 60,
      "format": "int"
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Fog",
      "bind": "params.fogDensity",
      "step": 0.01,
      "min": 0,
      "max": 0.2,
      "format": "fixed2"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Mouse Strength",
      "bind": "params.mouseStrength",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Tunnel Speed",
      "bind": "params.tunnelSpeed",
      "min": 0,
      "max": 60,
      "step": 0.1
    },
    {
      "type": "slider",
      "label": "Segment Count",
      "bind": "params.segmentCount",
      "min": 4,
      "max": 120,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Segment Spacing",
      "bind": "params.segmentSpacing",
      "min": 0.3,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Tunnel Radius",
      "bind": "params.tunnelRadius",
      "min": 1,
      "max": 12,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Segment Thickness",
      "bind": "params.segmentThickness",
      "min": 0.1,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glitch Intensity",
      "bind": "params.glitchIntensity",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Scan Intensity",
      "bind": "params.scanIntensity",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    },
    {
      "type": "slider",
      "label": "Shard Speed",
      "bind": "params.shardSpeed",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Shard Size",
      "bind": "params.shardSize",
      "min": 0.01,
      "max": 0.3,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Shard Opacity",
      "bind": "params.shardOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glitch Plane Opacity",
      "bind": "params.glitchPlaneOpacity",
      "min": 0,
      "max": 0.3,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    },
    {
      "type": "color",
      "label": "Fog Color",
      "bind": "params.fogColor"
    },
    {
      "type": "color",
      "label": "Background Color",
      "bind": "params.bgColor"
    }
  ],
  "hint": "Press H for help. Controls bind to params; this effect currently needs effect-side wiring to apply most of these parameters."
}
