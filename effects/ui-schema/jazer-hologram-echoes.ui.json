{
  "version": 1,
  "title": "Hologram Echoes",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "holoColor": "#00ffff",
    "echoCount": 8,
    "scanLineAlpha": 0.1,
    "scanLineSpacing": 3,
    "scanLineSpeed": 100,
    "glitchChance": 0.1,
    "glitchMax": 10,
    "mainSize": 80,
    "bracketSize": 40,
    "text": "JaZeR"
  },
  "hud": {
    "title": "Hologram Echoes - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Echoes",
      "bind": "params.echoCount",
      "step": 1,
      "min": 0,
      "max": 32,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "color",
      "label": "Holo Color",
      "bind": "params.holoColor"
    },
    {
      "type": "slider",
      "label": "Echo Count",
      "bind": "params.echoCount",
      "min": 0,
      "max": 32,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Scan Line Alpha",
      "bind": "params.scanLineAlpha",
      "min": 0,
      "max": 0.5,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glitch Chance",
      "bind": "params.glitchChance",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glitch Max",
      "bind": "params.glitchMax",
      "min": 0,
      "max": 50,
      "step": 1
    },
    {
      "type": "color",
      "label": "Background",
      "bind": "params.bgColor"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
