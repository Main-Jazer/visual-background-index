{
  "version": 1,
  "title": "Neon Smoke Vortex",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "smokeDensity": 0.6,
    "vortexStrength": 1,
    "glowStrength": 1,
    "colorA": "#00f5ff",
    "colorB": "#ff2aff"
  },
  "hud": {
    "title": "Neon Smoke Vortex - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Smoke Density",
      "bind": "params.smokeDensity",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Vortex Strength",
      "bind": "params.vortexStrength",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    }
  ],
  "hint": "Press H for help. This effect HTML is currently a placeholder; schema is a stub."
}
