{
  "version": 1,
  "title": "Particle Warp",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "particleCount": 300,
    "spawnRate": 5,
    "warpSpeed": 400,
    "trailLength": 0.08,
    "particleSizeMin": 1,
    "particleSizeRange": 2,
    "glowStrength": 1
  },
  "hud": {
    "title": "Particle Warp - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    },
    {
      "keys": [
        "[",
        "]"
      ],
      "label": "Speed",
      "bind": "params.warpSpeed",
      "step": 20,
      "min": 0,
      "max": 2000,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 5000,
      "step": 10
    },
    {
      "type": "slider",
      "label": "Spawn Rate",
      "bind": "params.spawnRate",
      "min": 0,
      "max": 60,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Warp Speed",
      "bind": "params.warpSpeed",
      "min": 0,
      "max": 2000,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Length",
      "bind": "params.trailLength",
      "min": 0,
      "max": 0.3,
      "step": 0.001
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
