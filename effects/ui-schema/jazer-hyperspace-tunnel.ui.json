{
  "version": 1,
  "title": "Hyperspace Tunnel",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "lineCount": 120,
    "ringCount": 40,
    "speed": 1,
    "lineWidth": 1.2,
    "ringAlpha": 0.5,
    "lineAlpha": 0.65,
    "parallaxStrength": 90,
    "trailAlpha": 0.12,
    "colorA": "#00f5ff",
    "colorB": "#ff2aff"
  },
  "hud": {
    "title": "Hyperspace Tunnel - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Line Count",
      "bind": "params.lineCount",
      "min": 0,
      "max": 1000,
      "step": 10
    },
    {
      "type": "slider",
      "label": "Ring Count",
      "bind": "params.ringCount",
      "min": 0,
      "max": 200,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Speed",
      "bind": "params.speed",
      "min": 0,
      "max": 5,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Color A",
      "bind": "params.colorA"
    },
    {
      "type": "color",
      "label": "Color B",
      "bind": "params.colorB"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
