{
  "version": 1,
  "title": "Sri Yantra",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "layerCount": 8,
    "baseRadius": 150,
    "parallaxStrength": 60,
    "rotationSpeed": 0.05,
    "trailAlpha": 0.12,
    "bgInner": "#140414",
    "bgOuter": "#000006"
  },
  "hud": {
    "title": "Sri Yantra - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Layer Count",
      "bind": "params.layerCount",
      "min": 1,
      "max": 24,
      "step": 1
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
