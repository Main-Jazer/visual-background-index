{
  "version": 1,
  "title": "Plasma Storm Corridor",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000005",
    "corridorDepth": 1200,
    "plasmaDensity": 0.6,
    "sparkCount": 1200,
    "sparkOpacity": 0.6,
    "fogStrength": 0.8,
    "colorA": "#ff2aff",
    "colorB": "#00f5ff"
  },
  "hud": {
    "title": "Plasma Storm Corridor - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
