{
  "version": 1,
  "title": "Zero Gravity Logo Cloud",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "mouseCamera": 1,
    "driftSpeed": 0.2,
    "particleSpeed": 30,
    "lineOpacity": 0.15,
    "particleOpacity": 0.4,
    "glowOpacity": 0.2,
    "particleCount": 1500,
    "letterCount": 5,
    "bgColor": "#000000",
    "neonA": "#00f5ff",
    "neonB": "#ff2aff",
    "accent": "#ffc857"
  },
  "hud": {
    "title": "Zero Gravity Logo Cloud - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "keys": [
        "3",
        "4"
      ],
      "label": "Drift",
      "bind": "params.driftSpeed",
      "step": 0.05,
      "min": 0,
      "max": 2,
      "format": "fixed2"
    },
    {
      "keys": [
        "5",
        "6"
      ],
      "label": "Speed",
      "bind": "params.particleSpeed",
      "step": 5,
      "min": 0,
      "max": 200,
      "format": "int"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Mouse Camera",
      "bind": "params.mouseCamera",
      "min": 0,
      "max": 2,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Drift Speed",
      "bind": "params.driftSpeed",
      "min": 0,
      "max": 2,
      "step": 0.001
    },
    {
      "type": "slider",
      "label": "Particle Speed",
      "bind": "params.particleSpeed",
      "min": 0,
      "max": 200,
      "step": 0.1
    },
    {
      "type": "slider",
      "label": "Line Opacity",
      "bind": "params.lineOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Opacity",
      "bind": "params.particleOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Glow Opacity",
      "bind": "params.glowOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect reads these params live."
}
