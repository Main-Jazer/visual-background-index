{
  "version": 1,
  "title": "Singularity Swirl",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#010006",
    "fogColor": "#030014",
    "fogDensity": 0.05,
    "particleCount": 2500,
    "particleOpacity": 0.6,
    "particleSize": 0.05,
    "swirlSpeedMin": 0.3,
    "swirlSpeedVar": 0.8,
    "accretionOpacity": 0.8,
    "accretionSpin": 0.5,
    "singularityColor": "#ff2aff",
    "singularityOpacity": 0.7
  },
  "hud": {
    "title": "Singularity Swirl - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Particle Count",
      "bind": "params.particleCount",
      "min": 0,
      "max": 50000,
      "step": 250
    },
    {
      "type": "slider",
      "label": "Fog Density",
      "bind": "params.fogDensity",
      "min": 0,
      "max": 0.2,
      "step": 0.001
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
