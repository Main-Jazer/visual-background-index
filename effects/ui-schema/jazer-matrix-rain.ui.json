{
  "version": 1,
  "title": "Matrix Rain",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "streamCount": 80,
    "trailAlpha": 0.14,
    "fontSizeMin": 8,
    "fontSizeMax": 20,
    "charSpacingScale": 1.2,
    "glowStrength": 1,
    "bgColor": "#000000",
    "accentColor": "#00ff66"
  },
  "hud": {
    "title": "Matrix Rain - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Stream Count",
      "bind": "params.streamCount",
      "min": 0,
      "max": 400,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Trail Alpha",
      "bind": "params.trailAlpha",
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },
    {
      "type": "color",
      "label": "Accent",
      "bind": "params.accentColor"
    }
  ],
  "hint": "Press H for help. This effect currently reads params.timeScale only; other controls are schema stubs pending effect-side wiring."
}
