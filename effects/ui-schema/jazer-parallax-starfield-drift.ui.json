{
  "version": 1,
  "title": "Parallax Starfield Drift",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "layerCount": 5,
    "starCounts": [
      150,
      200,
      250,
      300,
      350
    ],
    "parallaxFactors": [
      0.2,
      0.4,
      0.6,
      0.8,
      1
    ],
    "starOpacity": 0.8,
    "starSize": 0.05,
    "logoCount": 12,
    "logoOpacity": 0.8,
    "connectionOpacity": 0.2
  },
  "hud": {
    "title": "Parallax Starfield Drift - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    },
    {
      "key": "M",
      "label": "Mouse",
      "bind": "params.mouseEnabled",
      "type": "toggle",
      "format": "onoff"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "checkbox",
      "label": "Mouse Enabled",
      "bind": "params.mouseEnabled"
    },
    {
      "type": "slider",
      "label": "Layer Count",
      "bind": "params.layerCount",
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "slider",
      "label": "Connection Opacity",
      "bind": "params.connectionOpacity",
      "min": 0,
      "max": 1,
      "step": 0.01
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
