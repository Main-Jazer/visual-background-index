{
  "version": 1,
  "title": "Vaporwave Horizon Ride",
  "defaults": {
    "timeScale": 1,
    "mouseEnabled": true,
    "bgColor": "#000000",
    "gridWidth": 26,
    "gridDepth": 26,
    "gridResX": 200,
    "gridResZ": 200,
    "mountainCount": 24,
    "sunRadius": 1.6,
    "sunGlow": 1,
    "starCount": 600,
    "starOpacity": 0.55,
    "neonA": "#ff2aff",
    "neonB": "#00f5ff"
  },
  "hud": {
    "title": "Vaporwave Horizon Ride - Controls",
    "toggleKey": "h",
    "visible": false
  },
  "hotkeys": [
    {
      "key": "H",
      "label": "Toggle Help"
    },
    {
      "key": "R",
      "label": "Reset",
      "action": "reset"
    },
    {
      "keys": [
        "1",
        "2"
      ],
      "label": "Time",
      "bind": "params.timeScale",
      "step": 0.1,
      "min": 0.1,
      "max": 3,
      "format": "fixed1"
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Time Scale",
      "bind": "params.timeScale",
      "min": 0,
      "max": 3,
      "step": 0.01
    },
    {
      "type": "slider",
      "label": "Star Count",
      "bind": "params.starCount",
      "min": 0,
      "max": 200000,
      "step": 1000
    }
  ],
  "hint": "Press H for help. This effect does not currently read params; controls are schema stubs pending effect-side wiring."
}
